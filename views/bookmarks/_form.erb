<dl>
  <dt>
    <label for="bookmark_name">Name: </label>
  </dt>
  <dd>
    <input id="bookmark_name" type="text" name="bookmark[name]" value="<%= @bookmark.name %>" autofocus>
  </dd>
  <dt>
    <label for="bookmark_url">URL: </label>
  </dt>
  <dd>
    <input id="bookmark_url" type="text" name="bookmark[url]" value="<%= @bookmark.url %>">
  </dd>
  <dt>
    <label for="bookmark_genre">Genre: </label>
  </dt>
  <dd>
    <input id="bookmark_genre" type="text" name="bookmark[genre]" value="<%= @bookmark.genre %>">
  </dd>
  <dt>
    <label for="bookmark_details">Details: </label>
  </dt>
  <dd>
  <textarea id="bookmark_details" type="text" name="bookmark[details]"><%= @bookmark.details %></textarea>
  </dd>
</dl>
<div class="clear_both"></div>